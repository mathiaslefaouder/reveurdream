{% block _form_category_widget %}
    {% for choice in choices %}
        <label for="{{ name }}-{{ choice.data.id }}">
            <input type="radio" id="{{ name }}-{{ choice.data.id }}" name="{{ full_name }}" value="{{ choice.value }}"
                   {% if value == choice.data.id %}checked{% endif %}>
            <div class="filter-box" id="{{ name }}-{{ choice.data.id }}">
                {{ choice.label|raw }}
            </div>

        </label>
    {% endfor %}
{% endblock %}


{% block _form_theme_widget %}
    <p>thème : <span id="themeSelected"></span></p>
        {% if data %}
            {% if data.id == '1' and app.request.locale == 'en' %}
                {% set themeName = 'Social, Family, Friendship, Love'%}
            {% elseif data.id == '1'  and app.request.locale == 'es' %}
                {% set themeName = 'Social, Familia, Amistad, Amor'%}
            {% elseif data.id == '1'   %}
                {% set themeName = data.name%}

            {% elseif data.id == '2'  and app.request.locale == 'en' %}
                {% set themeName = 'Personal, Imagination'%}
            {% elseif data.id == '2'  and app.request.locale == 'es' %}
                {% set themeName = 'Personalidad, Imaginación'%}
            {% elseif data.id == '2'   %}
                {% set themeName = data.name%}

            {% elseif data.id == '3'  and app.request.locale == 'en' %}
                {% set themeName = 'Work, Profession'%}
            {% elseif data.id == '3'  and app.request.locale == 'es' %}
                {% set themeName = 'Trabajo, Profesión'%}
            {% elseif data.id == '3'   %}
                {% set themeName = data.name%}

            {% elseif data.id == '4'  and app.request.locale == 'en' %}
                {% set themeName = 'Travels'%}
            {% elseif data.id == '4'  and app.request.locale == 'es' %}
                {% set themeName = 'Viajes'%}
