{% extends 'base.html.twig' %}

{% block title %}Je partage mon rêve - Mon compte{% endblock %}

{% block body %}
    {% form_theme form _self %}
    {% form_theme form 'dream/_form_theme.html.twig' %}

    <section class="page">
        <div class="wrapper">
            <h1>Editer un rêve</h1>
            {{ form_start(form) }}
            <div class="edit-dream-data">
                <h3>Infos sur le rêve</h3>
                <p>type de songe</p>
                <div>
                    {{ form_widget(form.category) }}

                </div>
                {{ form_widget(form.theme) }}

                <p>Visibilité du rêve</p>
                <div class="edit-dream-visibility">
                    Visible
                    <label class="switch">
                        {% block _form_isDraft_row %}
                            {{ form_widget(form.isDraft) }}
                        {% endblock %}
                        <span class="slider round"></span>
                    </label>
                    <span style="color: #45568b">Invisible</span>
                </div>

                <a href="" class="similar-dreams">voir des rêves similaires</a>
            </div>

            <div class="edit-dream">
                <h3>Le rêve en lui-même</h3>
                <div id="edit-my-dream">
                    <div>
                        {% block _form_title_row %}
                            {{ form_widget(form.title, {'attr': {'class':"blue-button", 'placeholder':"Titre de mon rêve"}} ) }}
                        {% endblock %}
                        {% block _form_description_row %}
                            {{ form_widget(form.description, {'attr': {'class':"blue-button dream_story", 'placeholder':"Le rêve en lui même... (500 caractères max.)", 'maxlength':"500",  'onkeyup':"textCounter(this,'counter',500);"}} ) }}
                        {% endblock %}
                        <p><input disabled maxlength="3" size="3" value="500" id="counter"> caractères restants</p>
                    </div>
                    <div class="edit-dream-validation">
                        <input class="blue-button" type="submit" value="Valider les modifications">
                        <a class="blue-button" href="{{ url('app_user') }}">Annuler</a>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </section>


{% endblock %}
