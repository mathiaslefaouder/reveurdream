{% extends 'base.html.twig' %}

{% block title %}Je partage mon rêve - Mon compte{% endblock %}

{% block body %}
    <style>
        .labl > input { /* HIDE RADIO */
            visibility: hidden; /* Makes input not-clickable */
        }

        .labl > input + div { /* DIV STYLES */
            cursor: pointer;
        }

        .labl > input:checked + div { /* (RADIO CHECKED) DIV STYLES */
            background-color: #ffd6bb;
            border: 1px solid #ff6600;
        }
    </style>
    <section class="page postyourdream">
        <div class="wrapper">
            <div class="dream-phase" id="dream-step1">
                <h2>Contez votre rêve</h2>
                <p>Phase 1/4</p>
                <h3>Etait-ce un rêve <br/> ou un cauchemar ?</h3>

                <form action="{{ path('app_dream') }}" method="post">
                    <div class="dream-options">
                        <div class="dream-options-icons">
                            {% for category in categories %}
                                <style>#cat-{{ category.id}}:after {
                                        content: "{{category.name}}";
                                    }</style>

                                <label class="labl">
                                    <input type="radio" name="category"
                                           value="{{ category.id }}" {% if dream.category is not null and dream.category.id == category.id %} checked="checked"{% endif %}>
                                    <div class="filter-box dream-cat" id="cat-{{ category.id }}">
                                        {{ category.ico |raw }}
                                    </div>

                                </label>
                            {% endfor %}
                            <input type="hidden" value="{{dream.id}}" name="dream">
                        </div>
                    </div>
                    <div class="next-step-buttons">
                        <a class="blue-button" href="{{ url('app_index') }}">Annuler</a>
                        <input class="blue-button" type="submit" value="suivant">
                    </div>
                </form>
            </div>
        </div>
    </section>
{% endblock %}
